# Root environment variables for the SalonMind monorepo

# Frontend defaults
VITE_API_BASE_URL=http://localhost:5000

# Backend defaults
PORT=5000
MONGODB_URI=mongodb://localhost:27017/salonmind

# Auth secrets
JWT_ACCESS_SECRET=replace_me_access
JWT_REFRESH_SECRET=replace_me_refresh

# Token lifetimes per surface
ACCESS_TTL_ADMIN=15m
ACCESS_TTL_SALON_OWNER=15m
ACCESS_TTL_SALON_EMPLOYEE=15m
REFRESH_TTL_ADMIN=30d
REFRESH_TTL_SALON_OWNER=30d
REFRESH_TTL_SALON_EMPLOYEE=30d

# OTP safety
OTP_TTL_MS=300000
OTP_MAX_ATTEMPTS=5
OTP_MAX_RESENDS=3

# Admin allowlist (comma-separated E.164 numbers)
ADMIN_ALLOWLIST_NUMBERS=+15550000001
