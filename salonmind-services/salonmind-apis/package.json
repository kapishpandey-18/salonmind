{
  "name": "salonmind-backend",
  "version": "1.0.0",
  "description": "SalonMind Backend API with Express and MongoDB",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "seed": "node src/scripts/seed.js",
    "logs": "tail -f /tmp/salonmind-backend.log",
    "logs:clean": "rm -f /tmp/salonmind-backend.log",
    "health": "curl -s http://localhost:5000/health | jq",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'",
    "test": "jest",
    "e2e": "npm run test",
    "test:unit": "jest",
    "test:integration": "jest --runInBand"
  },
  "keywords": [
    "salon",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "uuid": "^11.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ]
  }
}
