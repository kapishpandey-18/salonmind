{
  "name": "@salonmind/api",
  "version": "1.0.0",
  "description": "SalonMind Backend API with Express and MongoDB",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "prod": "npm run build && NODE_ENV=production node dist/server.js",
    "typecheck": "tsc --noEmit",
    "seed": "tsx src/scripts/seed.ts",
    "logs": "tail -f /tmp/salonmind-backend.log",
    "logs:clean": "rm -f /tmp/salonmind-backend.log",
    "health": "curl -s http://localhost:5000/health | jq",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "e2e": "npm run test",
    "test:unit": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:integration": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --runInBand"
  },
  "keywords": [
    "salon",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "uuid": "^11.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^25.2.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {
        "useESM": true
      }]
    },
    "extensionsToTreatAsEsm": [".ts"],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  }
}
